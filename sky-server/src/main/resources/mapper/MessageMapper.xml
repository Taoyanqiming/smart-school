<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sky.mapper.MessageMapper">
    <insert id="insert" parameterType="com.sky.entity.Message">
        INSERT INTO Messages
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">
                user_id,
            </if>
            <if test="postId != null">
                post_id,
            </if>
            <if test="commentId != null">
                comment_id,
            </if>
            <if test="likeId != null">
                like_id,
            </if>
            <if test="favoriteId != null">
                favorite_id,
            </if>
            <if test="likeCommentId != null">
                likeCommentId,
            </if>
            message_type,
            message_content,
            is_read,
            created_time
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="userId != null">
                #{userId},
            </if>
            <if test="postId != null">
                #{postId},
            </if>
            <if test="commentId != null">
                #{commentId},
            </if>
            <if test="likeId != null">
                #{likeId},
            </if>
            <if test="favoriteId != null">
                #{favoriteId},
            </if>
            <if test="likeCommentId != null">
                #{likeCommentId},
            </if>
            #{messageType},
            #{messageContent},
            false,
            NOW()
        </trim>
    </insert>
</mapper>