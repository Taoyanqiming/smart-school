<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sky.mapper.NoticeMapper">

    <!-- 创建通知 -->
    <insert id="createNotice" parameterType="com.sky.entity.Notice">
        INSERT INTO parking.notice (user_id, title, content, created_time)
        VALUES (#{userId}, #{title}, #{content}, NOW())
    </insert>

    <!-- 删除通知 -->
    <delete id="deleteNotice" parameterType="Integer">
        DELETE FROM parking.notice
        WHERE notice_id = #{noticeId}
    </delete>
    <!-- 查询通知 -->
    <select id="selectNoticesByUserId" parameterType="java.lang.Integer" resultType="com.sky.entity.Notice">
        SELECT * FROM parking.notice
        WHERE user_id = #{userId}
    </select>
</mapper>
