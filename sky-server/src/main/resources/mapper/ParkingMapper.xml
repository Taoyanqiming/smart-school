<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.ParkingMapper">

    <!-- 筛选停车位 -->
    <select id="selectSpaces" resultType="com.sky.entity.ParkingSpaces">
        SELECT *
        FROM parking.parkingspaces
        <where>
            <!-- 根据停车场ID筛选 -->
            <if test="parkingLotId != null">
                AND parking_lot_id = #{parkingLotId}
            </if>
            <!-- 根据停车位类型筛选 -->
            <if test="type != null and type != ''">
                AND type = #{type}
            </if>
            <!-- 根据停车位状态筛选 -->
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
        </where>
    </select>

    <!-- 更新停车位信息 -->
    <update id="updateSpaces" parameterType="com.sky.entity.ParkingSpaces">
        UPDATE parking.ParkingSpaces
        <set>
            <if test="pricePerHour != null and pricePerHour != ''">
                price_per_hour = #{pricePerHour},
            </if>
            <if test="type != null and type != ''">
                type = #{type},
            </if>
            <if test="status != null and status != ''">
                status = #{status}
            </if>
        </set>
        WHERE space_id = #{spaceId} and parking_lot_id = #{parkingLotId}
    </update>

    <!-- 根据停车位ID查询停车位信息 -->
    <select id="getSpacesById" resultType="com.sky.entity.ParkingSpaces">
        SELECT *
        FROM parking.ParkingSpaces
        WHERE space_id = #{spaceId} AND parking_lot_id = #{parkingLotId}
    </select>

    <!-- 查询指定停车场内的所有停车位信息 -->
    <select id="getSpaces" parameterType="int" resultType="com.sky.entity.ParkingSpaces">
        SELECT * FROM parking.ParkingSpaces
        WHERE parking_lot_id = #{parkingLotId}
    </select>
</mapper>
