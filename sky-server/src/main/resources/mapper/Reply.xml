<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sky.mapper.ReplyMapper">

    <!-- 回复 -->
    <insert id="insertReplies" parameterType="com.sky.dto.RepliesDTO">
        INSERT INTO parking.replies (feedback_id, user_id, reply_text, reply_time)
        VALUES (#{feedbackId}, #{userId}, #{replyText},NOW())
    </insert>

    <!-- 删除回复 -->
    <delete id="deleteReplies" parameterType="java.lang.Integer">
        DELETE FROM parking.replies WHERE reply_id = #{replyId} and feedback_id = #{feedbackId}
    </delete>
    <!-- 查询回复信息 -->
    <select id="getReply" resultType="com.sky.entity.Replies">
        SELECT *
        FROM parking.replies
        WHERE
     feedback_id = #{feedbackId}
    </select>

</mapper>
