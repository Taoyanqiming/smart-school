<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.UserMapper">
    <!-- 根据手机号查询用户 -->
    <select id="getByPhone" resultType="com.sky.entity.User">
        select * from parking.users where phone_number = #{phoneNumber}
    </select>

    <!-- 插入用户数据 -->
    <insert id="insert">
        insert into parking.users ( username, password, phone_number) values (#{username},#{password},#{phoneNumber})
    </insert>
    <!--用户分页查询-->
    <select id="pageQuery" resultType="com.sky.entity.User">
        select *
        from parking.users
        <where>
            <if test="phoneNumber !=null and username!=''">
                and username like concat('%',#{username},'%')
            </if>
        </where>
    </select>
    <!-- 修改用户信息 -->
    <update id="update" parameterType="User">
        update parking.users
        <set>
            <if test="username != null and username != ''">username = #{username},</if>
            <if test="password != null and password != ''">password = #{password},</if>
            <if test="email != null and email != ''">email = #{email},</if>
            <if test="phoneNumber != null and phoneNumber != ''">phone_number = #{phoneNumber},</if>

        </set>
        where user_id = #{userId}
    </update>

    <!--    根据iD查询用户信息-->
    <select id="getById" resultType="com.sky.entity.User">
        select *
        from parking.users
        where user_id = #{userId}
    </select>
</mapper>
